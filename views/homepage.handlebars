<div class="row align-center mb-5">
  <div class="col-md-6">
    {{#each posts as |post|}}
      <div>
          <h2>{{post.title}}</h2>
          <p>{{post.created_date}}</p>
          <p>{{post.content}}</p>
          <p>Created by: {{post.user.name}}</p>
      </div>
    {{/each}}
  </div>
</div>